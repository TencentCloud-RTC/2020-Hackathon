<!--pages/my/my.wxml-->

<view class="page">
  <view class='page_bd'>

    <view class="weui-cells weui-cells_after-title content_0">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd user_avatar">
          <!-- <image src="{{logged ? userInfo.avatarUrl : '/image/ic_user_unlogin.png'}}" style="margin-right: 5px;vertical-align: middle;width:64px; height: 64px;" /> -->
          
          <open-data  type="userAvatarUrl"></open-data>
        </view>
        <view class="weui-cell__bd userName_container">
          <view>
            <!-- <text class='userName'>{{userInfo.nickName}}</text> -->
            <open-data class='userName' type="userNickName"></open-data>
          </view>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>

 <view class="weui-cells weui-cells_after-title content_2" bindtap='setting'>
      <view  class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd fullfill_button_container">
          <button class='fullfill_button' >
            <text class='fullfill_button_text'>相关设置</text>
          </button>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>

    <view class="weui-cells__title">系统消息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <!-- <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view> -->
        <view class="weui-cell__bd">手机品牌</view>
        <view class="weui-cell__ft">{{brand}}</view>
      </view>
      <view class="weui-cell">
        <!-- <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view> -->
        <view class="weui-cell__bd">手机型号</view>
        <view class="weui-cell__ft">{{model}}</view>
      </view>
      <view class="weui-cell">
        <!-- <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view> -->
        <view class="weui-cell__bd">微信版本号</view>
        <view class="weui-cell__ft">{{version}}</view>
      </view>
      <view class="weui-cell">
        <!-- <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view> -->
        <view class="weui-cell__bd">操作系统版本</view>
        <view class="weui-cell__ft">{{system}}</view>
      </view>
    </view>

    <view class="weui-cells__title">推荐与反馈</view>
    
    <view class="weui-cells weui-cells_after-title">
      <!-- <view class="weui-cells weui-cells_after-title content_1"> -->
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <!-- <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image> -->
        </view>

        <view class="weui-cell__bd fullfill_button_container">
          <button class='fullfill_button' open-type='share'>
            <text class='fullfill_button_text'>分享给好友</text>
          </button>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>

    </view>

  <view class="weui-cells weui-cells_after-title content_2" bindtap='tucao'>
      <view  class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd fullfill_button_container">
          <button class='fullfill_button' >
            <text class='fullfill_button_text'>吐槽社区</text>
          </button>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title content_2">
      <view url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd fullfill_button_container">
          <button class='fullfill_button' open-type='contact'>
            <text class='fullfill_button_text'>客服聊天</text>
          </button>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>


  

  </view>
  
</view>