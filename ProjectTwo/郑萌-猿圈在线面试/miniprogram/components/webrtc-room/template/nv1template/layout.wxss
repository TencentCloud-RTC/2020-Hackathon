.nv1template.videoview {
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.nv1template .pusher-box {
  /* position: absolute;
  display: inline-block; */
  overflow: hidden;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  float: left;
}
.nv1template .oneHeight{
  width: 100vw;
  height: 100vw;
}
.nv1template .fourHeight{
  width: 50vw;
  height: 50vw;
}
.nv1template .sixHeight{
  width: 33.3vw;
  height: 33.3vw;
}

.nv1template live-pusher {
  width: 100%;
  height: 100%;
  /* border:3rpx solid #56ACFD; */
  font-size: 28rpx;
}

.nv1template .player-box {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  /* width: 33.3vw;
  height: 33.3vw; */
  float: left;
}

.nv1template .poster {
  /* position: absolute; */
  width: 100%;
  height: 100%;
  /* top: 0;
  left: 0; */
  background-color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nv1template .set {
  /* position: absolute; */
  width: 20%;
	height: auto; 
  opacity: 0.4;
}

.nv1template live-player {
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 28rpx;
}

.nv1template .loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.nv1template .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

.nv1template .interviewee-name,.nv1template .interviewer-name {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 6rpx;
  background: rgba(0, 0, 0, 0.4);
  text-align: left;
}
.nv1template .type-title{
  background: #2A2A2A;
  color:rgba(255,255,255,0.45);
  width: 100%;
  text-align: center;
  height: 54rpx;
  line-height: 54rpx;
}
.nv1template .wer-box{
  height: 33.33vw;
}
.nv1template .realname{
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 22rpx;
  /* background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); */
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: space-between;
  height: 30rpx;
}
.nv1template .realname .mute{
  width: 24rpx;
  height: 24rpx;
}
.nv1template .realname .name{
  display: inline-block;
}
.nv1template .realname .main{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align:top;
  padding-top:4rpx;
}