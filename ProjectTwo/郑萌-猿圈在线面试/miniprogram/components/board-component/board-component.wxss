/* components/board-component/board-component.wxss */
.tic-board-box {
  width: 100%;
  height: 100%;
}

.tic-board-box .tic-board-wrap {
  position: relative;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

.tic-board-box .tic_board_canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%);
  background: transparent;
  z-index: 15;
}

.tic-board-box .tic_board_img_bg {
  position: absolute;
  z-index: 10;
}

.tic-board-box .tic_board_img_bg.vertical {}

.tic-board-box .tic_board_img_bg.horizontal {
  transform: rotate(90deg);
  transform-origin: left top 0;
}

.tic-board-box .tic_board_color_bg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
}