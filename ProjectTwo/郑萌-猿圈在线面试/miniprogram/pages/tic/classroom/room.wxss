/* 面试评价表 */
.rate_container{
  font-size: 28rpx;
}
.rate_panel{
  padding: 30rpx 30rpx 60rpx;
}
.rate_item{
  margin-bottom: 60rpx;
}
.rate_title{
  border-left: 8rpx solid #1890ff;
  margin-bottom: 40rpx;
  padding-left: 16rpx;
  font-size: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
}
.rate_title .desc{
  color: #888888;
  font-size: 24rpx;
}
.require{
  color: #F4333C;
  font-size: 24rpx;
}
.rate_total{
  float: right;
  font-size: 30rpx;
}
.rate_total text{
  color: #1890ff;
}
.rate_comment{
  width: 650rpx;
  height: 180rpx;
  border: 1px solid #C7C7CC;
  border-radius: 4rpx;
  padding: 20rpx;
  margin: 0 auto;
  display: block;
}
.rate_notice{
  color: #888888;
  line-height: 42rpx;
  white-space: pre-line;
}
.judge{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.judge_item{
  width: 210rpx;
  height: 58rpx;
  border: 1px solid #C7C7CC;
  border-radius: 4px;
  text-align: center;
  line-height: 58rpx;
  color: #666666;
  position: relative;
}
.judge_item .icon{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 32rpx;
  height: 32rpx;
}
.rate_dimension{
  display: flex;
  align-items: center;
  /* margin-bottom: 32rpx; */
}
.rate_dimension .require{
  width: 14rpx;
}
.rate_dimension_name{
  color: #333;
}
.rate_explain{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
}
.rete_input{
  width: 200rpx;
  height: 58rpx;
  border: 1px solid #C7C7CC;
  border-radius: 4rpx;
  padding: 0 20rpx;
  margin-right: 10rpx;
}
.green{
  border-color: #2FC25B;
  color: #2FC25B;
}
.blue{
  border-color: #108EE9;
  color: #108EE9;
}
.red{
  border-color: #F4333C;
  color: #F4333C;
}
.btns{
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.btns button{
  width: 333rpx;
  border: 1px solid #1890ff;
  font-size: 30rpx;
}
.btn1{
  color: #1890ff;
  background: #fff;
}
.btn2{
  color: #fff;
  background: #1890ff;
}
.wee_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
  padding: 26rpx 30rpx;
  border-bottom: 1px solid #DDDDDD;
}
.wee_item image{
  width: 13rpx;
  height: 22rpx;
}